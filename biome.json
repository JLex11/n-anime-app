{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120,
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"trailingComma": "none",
			"bracketSpacing": true,
			"quoteStyle": "single"
		}
	}
}
